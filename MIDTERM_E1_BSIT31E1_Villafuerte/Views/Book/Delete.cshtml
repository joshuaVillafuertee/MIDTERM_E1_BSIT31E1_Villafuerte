@model MIDTERM_E1_BSIT31E1_Villafuerte.Models.Book

<div class="container mt-4">
    <h2>Delete Book</h2>
    <p>Are you sure you want to delete this book?</p>

    <div class="card shadow-sm p-3 mb-3">
        <img src="@Model.ImageUrl" class="card-img-top mb-3" style="height:200px; object-fit:cover;" alt="@Model.Title" />
        <h4>@Model.Title</h4>
        <p><strong>Author:</strong> @Model.Author</p>
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Copies:</strong> @Model.Copies</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
